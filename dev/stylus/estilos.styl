@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Lato|Lobster')

background = #121314
links = #88898c
links_border = 3px solid #84bd00
title = #ddd
enabled = #648f00
disabled = #88898c

body 
	background-color background
	color white
	font-family 'Lato'
	

header
	background-image: linear-gradient(
	rgba(41,41,41, .5), 
	rgba(41,41,41, .5)
	 ), url('../img/bg.jpg');
	    background-position: center center, center -305px
	    background-size: cover, cover
	height 220px
	padding 2em
	h1
		margin-top 0
	
table td 
	padding 5px
	
input
	margin-bottom 10px
	border-radius 20px

.fa 
	margin-right .5em
	
.btn-buscar
	background enabled
	border 1px solid enabled
	padding 5px 10px
	border-radius 20px
	width 100px
	margin 10px 10px 10px 0
	transition all .25s
	&:disabled
		background-color transparent
		border 1px solid disabled
		color disabled
	
.iblock
	display inline-block
	vertical-align sub
	
a 
	color links
	cursor pointer

h1, h2
	font-family 'Lobster'
	color white
	
ul 
	margin 0
	padding 0
	li
		list-style none

figure
	margin-top 1em
img 
	height auto
	width 100%
				
#myPopover span 
	font-weight normal
	
.popover-content,
.popover-title
	color #222
	
.title 
	color title
	
@import 'search'
@import 'mediaqueries'