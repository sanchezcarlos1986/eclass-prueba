@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Lato|Lobster')

background = #121314
links = #88898c
links_border = 3px solid #84bd00
title = #ddd

body 
	background-color background
	color white
	font-family 'Lato'
	
a 
	color links

h1
	font-family 'Lobster'
	
ul 
	margin 0
	padding 0
	li
		list-style none
		
figure
	margin-top 1em
	img 
		height auto
		width 100%
				
#myPopover span 
	font-weight normal

	
.popover-content,
.popover-title
	color #222
	
.title 
	color title