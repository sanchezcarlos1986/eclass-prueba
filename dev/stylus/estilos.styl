@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Lato|Lobster')

background = #121314
links = #88898c
links_border = 3px solid #84bd00
title = #ddd
enabled = #648f00
disabled = #88898c

body 
	background-color background
	color white
	font-family 'Lato'

header
	background-image: linear-gradient(
	rgba(41,41,41, .7), 
	rgba(41,41,41, .7)
	 ), url('../img/bg.jpg');
	    background-position: center center, center -350px
	    background-size: cover, cover
	height 220px
	padding 2em
	h1
		margin-top 0

footer 
	text-align center
	color rgba(white, .2)
	border-bottom 1px solid rgba(white, .2)
	border-top 1px solid rgba(white, .2)
	padding 1em
	margin-top 1em
	
	a:hover 
		color white

table td 
	padding 5px
	
input
	margin-bottom 10px
	border-radius 20px

.fa 
	margin-right .5em
	
.btn-buscar
	animation myMove 1s infinite
	background enabled
	border 1px solid enabled
	padding 5px 10px
	border-radius 20px
	width 120px
	margin 10px 10px 10px 0
	transition all .25s
	&:disabled
		animation none
		background-color transparent
		border 1px solid disabled
		color disabled
		width 100px
		
@keyframes myMove
	0% 
		opacity 1
	50%
		opacity .7
	100% 
		opacity 1
	
.iblock
	display inline-block
	vertical-align sub
	
.acciones
	// border-top 1px solid rgba(white,0.12)
	margin-top 5px
	padding-top 5px
	a 
		color white
		font-size 20px
		&:hover 
			text-decoration none
	
a 
	color links
	cursor pointer

h1, h2
	font-family 'Lobster'
	color white
	
ul 
	margin 0
	padding 0
	li
		list-style none
				
#myPopover span 
	font-weight normal
	
.popover-content,
.popover-title
	color #222
	
.title 
	color title
	
@import 'searchView'
@import 'albumView'
@import 'mediaqueries'