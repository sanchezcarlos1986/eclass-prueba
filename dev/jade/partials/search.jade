h2 Buscador de canciones

form
	.buscar
		button(ng-click="buscarEnSpotify()" id="buscar_btn" class="btn-buscar iblock") Buscar
		input(type="text" class="form-control iblock" ng-model="text" id="buscador_spotify"  placeholder="Buscar en Spotify")
	input(type="text" class="form-control" ng-model="buscador"  placeholder="Filtrar Canciones del Listado")

//- Resultados
div#search
	ul
		article(ng-repeat="item in resultados | filter: buscador | limitTo: 2" ng-model="cancion")
			.col-sm-3
				figure
					img(ng-src="{{ item.album.images[0].url }}" alt="{{ item.album.name }}")
			.col-sm-9
				.cancion {{ item.name }}
				.artista {{ item.artists[0].name }}

				audio(controls)
					source(ng-src="{{item.preview_url | trusted}}" type="audio/ogg")
					source(ng-src="{{item.preview_url | trusted}}" type="audio/mpeg")

				acciones-item